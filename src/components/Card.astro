---
interface Props{
    title: string;
    text: string;
    image: string;
    date: string;
}
const {title, text, image, date} = Astro.props;
---
<div class="w-[300px] h-[350px] mt-10 cover justify-between flex flex-col relative" style={{backgroundImage: `url(${image})`, backgroundSize: 'contain', backgroundRepeat: 'no-repeat'}}>
    <div class="items-start text-center bg-orange-600/80 w-36 h-8 ml-4 mt-3 ">
        <h3 class="font-semibold text-white">{title}</h3>
    </div>
    <div class="w-full h-[80px] bg-black bg-opacity-10 flex flex-col mt-auto">
        <h2 class="text-gray-800 text-lg font-semibold ml-8">{date}</h2>
        <p class="text-white text-sm mt-4 ml-8">{text}</p>
    </div>
</div>